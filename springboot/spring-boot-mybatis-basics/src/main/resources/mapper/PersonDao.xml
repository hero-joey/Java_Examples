<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hero.mybatis.dao.PersonDao">

    <resultMap id="PersonResultWithIdCard" type="com.hero.mybatis.entity.Person">
        <!--@Table t_person-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <association property="cardId" column="card_id" javaType="com.hero.mybatis.entity.IdCard"
                     select="com.hero.mybatis.dao.IdCardDao.queryById" />
    </resultMap>

    <resultMap id="PersonResultWithIdCard2" type="com.hero.mybatis.entity.Person">
        <!--@Table t_person-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <association property="cardId" javaType="com.hero.mybatis.entity.IdCard">
            <id property="id" column="card_id"/>
            <result property="code" column="code"/>
        </association>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PersonResultWithIdCard">
        select* from test.t_person where id = #{id}
    </select>

    <!--查询单个-->
    <select id="findPersonById" resultMap="PersonResultWithIdCard2">
        select
            p.*, i.code
        from test.t_person as p, test.t_id_card as i
        where p.card_id = i.id and p.id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PersonResultWithIdCard">
        select
          id, name, age, sex, card_id
        from test.t_person
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PersonResultWithIdCard">
        select
          id, name, age, sex, card_id
        from test.t_person
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="cardId != null">
                and card_id = #{cardId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test.t_person(name, age, sex, card_id)
        values (#{name}, #{age}, #{sex}, #{cardId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.t_person
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="cardId != null">
                card_id = #{cardId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.t_person where id = #{id}
    </delete>

</mapper>