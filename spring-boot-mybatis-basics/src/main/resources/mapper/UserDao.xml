<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hero.mybatis.dao.UserDao">

    <resultMap id="BaseResultMap" type="com.hero.mybatis.entity.User">
        <!--@Table t_user-->
        <result property="id" column="t_id" jdbcType="INTEGER"/>
        <result property="name" column="t_name" jdbcType="VARCHAR"/>
        <result property="age" column="t_age" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          t_id, t_name, t_age
        from test.t_user
        where t_id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          t_id, t_name, t_age
        from test.t_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          t_id, t_name, t_age
        from test.t_user
        <where>
            <if test="tId != null">
                and t_id = #{tId}
            </if>
            <if test="tName != null and tName != ''">
                and t_name = #{tName}
            </if>
            <if test="tAge != null">
                and t_age = #{tAge}
            </if>
        </where>
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="findUsersByNamesAndJobs" resultMap="BaseResultMap">
        select
        t_id, t_name, t_age
        from test.t_user
        <where>
            <if test="id != null">
                and t_id = #{id}
            </if>
            <if test="name != null and name != ''">
                and t_name like concat('%', #{name}, '%')
            </if>
            <if test="age != null">
                and t_age = #{age}
            </if>
        </where>
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="findUsersByNamesAndJobs2" resultMap="BaseResultMap">
        select
        t_id, t_name, t_age
        from test.t_user where 1=1
        <if test="name != null and name != ''">
            and t_name like concat('%', #{name}, '%')
        </if>
        <if test="age != null">
            and t_age = #{age}
        </if>
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="findUsersByUserIds" resultMap="BaseResultMap">
        select
        t_id, t_name, t_age
        from test.t_user where t_id in
        <foreach item="item" index="index" collection="list"
                 open="(" separator="," close=")">
            #{item.id}
        </foreach>
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="findUsersByIds" resultMap="BaseResultMap">
        select
        t_id, t_name, t_age
        from test.t_user where t_id in
        <foreach item="id" index="index" collection="array"
                 open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="findUsersByNameAndIds" resultMap="BaseResultMap">
        select
        t_id, t_name, t_age
        from test.t_user
        <where>
            <if test="name != null and name != ''">
                and t_name like concat('%', #{name}, '%')
            </if>
        </where>
         and t_id in
        <foreach item="id" index="index" collection="ids"
                 open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="findUsersByNamesOrJobs" resultMap="BaseResultMap">
        select
        t_id, t_name, t_age
        from test.t_user where 1=1
        <choose>
            <when test="name != null and name != ''">
                and t_name like concat('%', #{name}, '%')
            </when>

            <when test="age != null">
                and t_age = #{age}
            </when>

            <otherwise>
                and t_id is not null
            </otherwise>
        </choose>
    </select>




    <!--新增所有列-->
    <insert id="insert" keyProperty="tId" useGeneratedKeys="true">
        insert into test.t_user(t_name, t_age)
        values (#{tName}, #{tAge})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.t_user
        <set>
            <if test="name != null and name != ''">
                t_name = #{name},
            </if>
            <if test="age != null">
                t_age = #{age},
            </if>
        </set>
        where t_id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.t_user where t_id = #{tId}
    </delete>

</mapper>