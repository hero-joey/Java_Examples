<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hero.initializer.dao.NbOrdersDao">

    <resultMap id="BaseResultMap" type="com.hero.initializer.entity.NbOrders">
        <!--@Table t_nb_orders-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="number" column="number" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, number, user_id
        from test.t_nb_orders
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, number, user_id
        from test.t_nb_orders
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, number, user_id
        from test.t_nb_orders
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="number != null and number != ''">
                and number = #{number}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test.t_nb_orders(number, user_id)
        values (#{number}, #{userId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.t_nb_orders
        <set>
            <if test="number != null and number != ''">
                number = #{number},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.t_nb_orders where id = #{id}
    </delete>

</mapper>